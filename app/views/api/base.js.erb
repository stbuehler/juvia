var Juvia;
if (!Juvia) {
	Juvia = {};
}
if (!Juvia.onApiLoad) {
	Juvia.onApiLoad = function(cb) {
		if (!Juvia._onApiLoad) Juvia._onApiLoad = [];
		Juvia._onApiLoad.push(cb);
	}
}
Juvia.baseUrl = '<%= root_url %>';

(function() {
	var s, head = (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]);

	if (!document.getElementById('juvia-api-javascript')) {
		s           = document.createElement('script');
		s.async     = true;
		s.type      = 'text/javascript';
		s.id        = 'juvia-api-javascript';
		s.src       = '<%= javascript_url 'api' %>';
		head.appendChild(s);
	}
	if (!document.getElementById('juvia-api-css')) {
		s           = document.createElement('link');
		s.rel       = 'stylesheet';
		s.type      = 'text/css';
		s.id        = 'juvia-api-css';
		s.href      = '<%= stylesheet_url 'api' %>';
		s.media     = 'screen';
		head.appendChild(s);
	}
})();
